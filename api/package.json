{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --watch --debug",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --coverage --watchAll",
    "test:pre-commit": "jest --no-watch --no-watchAll --coverage=false",
    "test:e2e": "jest --config ./test/jest-e2e.json --passWithNoTests",
    "test:ci": "jest --silent --no-watch --no-watchAll --coverage=false --runInBand",
    "schema:sync": "npx typeorm schema:sync -d build/src/type-orm.config.js",
    "migrations:generate": "npx typeorm migration:generate -d build/src/type-orm.config.js build/src/migrations/ProjektarbeitAPI",
    "migrations:revert": "npx typeorm migration:revert -d build/src/type-orm.config.js",
    "migrations:status": "npx typeorm migration:show -d build/src/type-orm.config.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/typeorm": "^10.0.1",
    "cookie-parser": "^1.4.6",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "luxon": "^3.4.4",
    "mysql": "^2.18.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "typeorm-extension": "^3.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/crypto-js": "^4.2.2",
    "@types/es6-shim": "^0.31.45",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.10.5",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.[jt]s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.[jt]s"
    ],
    "coverageDirectory": "<rootDir>/../../coverage/api",
    "coverageReporters": [
      "clover",
      "text-summary",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/mocks",
      "<rootDir>/migrations",
      "<rootDir>/tokens",
      "<rootDir>/config.ts",
      "<rootDir>/main.ts",
      "<rootDir>/type-orm.config.ts",
      "/index\\.ts$",
      "\\.module\\.ts$",
      "/entities/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "lines": 100,
        "statements": 100,
        "functions": 100
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@Common/(.*)$": ["<rootDir>/../src/common/$1"],
      "^@Controllers/(.*)$": ["<rootDir>/../src/controllers/$1"],
      "^@Decorators/(.*)$": ["<rootDir>/../src/decorators/$1"],
      "^@Entities/(.*)$": ["<rootDir>/../src/entities/$1"],
      "^@Exceptions/(.*)$": ["<rootDir>/../src/exceptions/$1"],
      "^@Filters/(.*)$": ["<rootDir>/../src/filters/$1"],
      "^@Guards/(.*)$": ["<rootDir>/../src/guards/$1"],
      "^@Modules/(.*)$": ["<rootDir>/../src/modules/$1"],
      "^@Pipes/(.*)$": ["<rootDir>/../src/pipes/$1"],
      "^@Services/(.*)$": ["<rootDir>/../src/services/$1"],
      "^@Strategies/(.*)$": ["<rootDir>/../src/strategies/$1"],
      "^@Tokens/(.*)$": ["<rootDir>/../src/tokens/$1"],
      "^@Types/(.*)$": ["<rootDir>/../src/types/$1"],
      "^@Utils/(.*)$": ["<rootDir>/../src/utils/$1"],
      "^@Environment$": ["<rootDir>/../src/environment"],
      "^@Test/Providers/(.*)$": ["<rootDir>/../test/providers/$1"]
    }
  }
}
